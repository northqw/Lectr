{
  "name": "lectr",
  "version": "1.0.1",
  "description": "Lectr is a Markdown editor with live preview and desktop packaging.",
  "main": "electron/main.cjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve-dist": "vite preview --host 127.0.0.1 --port 5001",
    "build-and-serve": "npm run build && npm run serve-dist",
    "app:dev": "concurrently -k \"vite --host 127.0.0.1 --port 5173\" \"wait-on tcp:5173 && ELECTRON_START_URL=http://127.0.0.1:5173 electron .\"",
    "app": "npm run build && electron .",
    "app:dist": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.lectr.app",
    "productName": "Lectr",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^36.9.5",
    "electron-builder": "^26.7.0",
    "vite": "^6.4.1",
    "wait-on": "^8.0.5"
  },
  "dependencies": {
    "dompurify": "^3.2.5",
    "github-markdown-css": "^5.8.1",
    "marked": "^15.0.7",
    "monaco-editor": "^0.52.2"
  }
}
