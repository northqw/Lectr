{
  "name": "lectr",
  "version": "2.0.0",
  "description": "Lectr is a Markdown editor with live preview and desktop packaging.",
  "main": "electron/main.cjs",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve-dist": "vite preview --host 127.0.0.1 --port 5001",
    "build-and-serve": "npm run build && npm run serve-dist",
    "app:dev": "concurrently -k \"vite --host 127.0.0.1 --port 5173\" \"wait-on tcp:5173 && ELECTRON_START_URL=http://127.0.0.1:5173 electron .\"",
    "app": "npm run build && electron .",
    "app:dist": "npm run build && electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.lectr.app",
    "productName": "Lectr",
    "icon": "public/icon.png",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "linux": {
      "icon": "public/icon.png",
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "win": {
      "icon": "public/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico"
    },
    "mac": {
      "icon": "public/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "northqw",
        "repo": "Lectr"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:northqw/Lectr.git"
  },
  "bugs": {
    "url": "https://github.com/northqw/Lectr/issues"
  },
  "homepage": "https://github.com/northqw/Lectr#readme",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "dompurify": "^3.2.5",
    "electron-updater": "^6.6.2",
    "github-markdown-css": "^5.8.1",
    "marked": "^15.0.7",
    "monaco-editor": "^0.52.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^36.9.5",
    "electron-builder": "^26.7.0",
    "vite": "^6.4.1",
    "wait-on": "^8.0.5"
  }
}
